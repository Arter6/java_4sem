<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#4599BA"
	tools:context=".Activities.SplashActivity">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="134dp"
		android:layout_height="134dp"
		android:layout_marginStart="25dp"
		android:layout_marginTop="248dp"
		android:layout_marginEnd="26dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/splash_icon" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Планировщик задач"
		android:textColor="#D2DD3D"
		android:textSize="30sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView" />

	<ImageView
		android:id="@+id/swipeLeft"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginStart="72dp"
		android:layout_marginBottom="90dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:srcCompat="@drawable/baseline_keyboard_double_arrow_left_24" />

	<ImageView
		android:id="@+id/swipeRight"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginEnd="72dp"
		android:layout_marginBottom="90dp"
		android:rotationY="180"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:srcCompat="@drawable/baseline_keyboard_double_arrow_left_24" />

	<TextView
		android:id="@+id/update"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="Изменить"
		android:textColor="#48FF3B"
		android:textSize="24sp"
		app:layout_constraintEnd_toEndOf="@+id/swipeLeft"
		app:layout_constraintStart_toStartOf="@+id/swipeLeft"
		app:layout_constraintTop_toBottomOf="@+id/swipeLeft" />

	<TextView
		android:id="@+id/delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="Удалить"
		android:textColor="#FF2929"
		android:textSize="24sp"
		app:layout_constraintEnd_toEndOf="@+id/swipeRight"
		app:layout_constraintStart_toStartOf="@+id/swipeRight"
		app:layout_constraintTop_toBottomOf="@+id/swipeRight" />
</androidx.constraintlayout.widget.ConstraintLayout>